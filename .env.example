# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dental_lab_db"

# JWT
JWT_SECRET="your-super-secret-key-change-in-production"
JWT_EXPIRATION="7d"

# Server
PORT=3000
NODE_ENV="development"
LOG_LEVEL="debug"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Supabase (Optional)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR="./uploads"

# Email (Optional - for notifications)
# Choose one: SMTP or Resend API
# For SMTP:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@dentallab.com"

# For Resend (recommended - modern, free tier allows 100 emails/day)
RESEND_API_KEY="re_xxx_your_resend_api_key"
FROM_EMAIL="noreply@dentalkart.com"
FRONTEND_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRATION="30d"
